{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block containerLeft %}
    <h1>{{ post.title }}</h1>
    <div class="date">{{ post.datePublished|date('d.m.Y h:i') }}</div>
    <div id="postContainer">
        {{ post.content|raw }}
        {% for recipe in post.recipes %}
            <br>
            <span class="smallLine"></span>
            <br><br>
            <h2>{{ recipe.title }}</h2>
            <br>
            <div class="row heightFix">
                <div class="col-xs-12 col-md-4 ingredientList">
                    <div class="sectionTitle">
                        <b>Z</b>UTATEN
                    </div>
                    <div class="feedsN">{{ recipe.feedsNPeople }}</div>
                    {% for recipeIngredient in recipe.recipeIngredients %}
                        <div class="piItem">
                            <b>{{ recipeIngredient.amount }}</b>
                            <b>{{ recipeIngredient.unit }}</b>
                            <a href="{{ path('ingredient_filter', {'slug': recipeIngredient.ingredient.slug}) }}">
                                <span class="postIngredient">{{ recipeIngredient.ingredient }}</span>
                            </a>
                            <span>
                                {{ recipeIngredient.comment }}
                            </span>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-xs-12 col-md-8">
                    <div class="sectionTitle">
                        <b>Z</b>UBEREITUNG
                    </div>
                    {% for step in recipe.steps %}
                        <div class="step">
                            <div class="index">{{ loop.index }}</div>
                            <div class="description">
                                {{ step.description }}
                                {% if step.hint %}
                                <div class="hint {% if step.invertHint %}right{% endif %}">
                                    {{ step.hint }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                {% if recipe.nutritionCached %}
                    {{ recipe.nutritionCached|raw }}
                {% endif %}
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="row">
                {% if recipe.content %}
                    <div class="recipeAppendix">
                    {{ recipe.content|raw }}
                    </div>
                {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    <br>
    {% set current_url = 'http://kuchenkruemel.ch' ~ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
    <div class="fb-like" data-href="{{ current_url }}" data-layout="standard"
         data-action="like" data-size="large" data-show-faces="true" data-share="true" data-width="100%"></div>
    <div class="fb-comments" data-href="{{ current_url }}" data-width="100%"
         data-numposts="5"></div>
{% endblock %}