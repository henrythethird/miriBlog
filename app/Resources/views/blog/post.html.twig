{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block containerLeft %}
    {% include 'print/download.html.twig' with {downloadable: post, title: 'Beitrag als PDF herunterladen'} %}
    {% include 'blog/postContent.html.twig' %}
    <br>
    {% set current_url = 'http://kuchenkruemel.ch' ~ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
    <div class="share"></div>
    <div class="fb-like"
         data-href="{{ current_url }}"
         data-layout="standard"
         data-action="like"
         data-show-faces="true">
    </div>
    <div class="fb-comments" data-href="{{ current_url }}" data-width="100%"
         data-numposts="5"></div>
{% endblock %}